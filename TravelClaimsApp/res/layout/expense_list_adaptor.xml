<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expense_list_adaptor"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/expenseAdaptor_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/expenseAdaptor_currency"
        android:text="date"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/expenseAdaptor_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="currency"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/expenseAdaptor_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expenseAdaptor_date"
        android:layout_alignParentLeft="true"
        android:text="ExpenseName"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/expenseAdaptor_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/expenseAdaptor_category"
        android:layout_toLeftOf="@+id/expenseAdaptor_currency"
        android:text="amount"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/expenseAdaptor_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expenseAdaptor_date"
        android:layout_alignBottom="@+id/expenseAdaptor_date"
        android:layout_centerHorizontal="true"
        android:text="category"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/expenseAdaptor_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/expenseAdaptor_category"
        android:onClick="ChangeFlag"
        android:src="@drawable/ic_toggle_star_outline" />

    <ImageView
        android:id="@+id/expenseAdaptor_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/expenseAdaptor_flag"
        android:layout_below="@+id/expenseAdaptor_currency"
        android:layout_toLeftOf="@+id/expenseAdaptor_flag"
        android:src="@drawable/ic_action_map_icon" />

</RelativeLayout>
