<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/claimAdaptor_startDate"
    android:background="@android:color/darker_gray"/>
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/claimAdaptor_startDate"
    android:background="@android:color/darker_gray"/>
    
    <TextView
        android:id="@+id/claimAdaptor_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_below="@+id/claimAdaptor_display_name"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/claimAdaptor_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Small Text"
	        android:textColor="#000000"
	        android:layout_gravity="left"
	        android:layout_weight="100"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
	    <TextView
	        android:id="@+id/claim_color_code"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:background="#0746F2"
	        android:textColor="#0746F2"
	        android:text="S"
	        android:layout_weight="1"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/claimAdaptor_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/horizontal_line"
        android:paddingBottom="1dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

   	<LinearLayout
   	    android:id="@+id/linearLayout_destinations"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:divider="@drawable/horizontal_line"
   	    android:showDividers="end"
   	    android:dividerPadding="1dp"
   	    android:orientation="vertical" >

   	</LinearLayout>

   	<LinearLayout
   	    android:id="@+id/LinearLayout_tags"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal">
   	</LinearLayout>
	
   	<LinearLayout
   	    android:id="@+id/LinearLayout_amounts"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:divider="@drawable/horizontal_line"
   	    android:showDividers="end"
   	    android:orientation="vertical" >
   	</LinearLayout>
   


</LinearLayout>